<resources>

	<style name="AppTheme.PixelXpert" parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Window layout. -->
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>

		<!-- App theme -->
		<item name="alertDialogTheme">@style/MaterialComponents.MaterialAlertDialog</item>
		<item name="materialAlertDialogTheme">@style/MaterialComponents.MaterialAlertDialog</item>
		<item name="textAppearanceListItem">@style/TextAppearance.App.ListItem.Title</item>
		<item name="android:windowLightStatusBar">?attr/isLightTheme</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
		<item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
		<item name="android:enforceNavigationBarContrast">false</item>
		<item name="fontFamily">@font/google_sans_text_400</item>
		<item name="seekBarStyle">@style/Material3.SeekBar</item>
		<item name="extendedFloatingActionButtonStyle">@style/Widget.ExtendedFloatingActionButton</item>
		<item name="android:popupMenuStyle">@style/PopupMenu</item>
	</style>

</resources>