<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        app:fragment="sh.siava.AOSPMods.SettingsActivity$GestureNavFragment"
        app:key="gesturenav_header"
        app:title="@string/gesturenav_header" />
    <Preference
        app:fragment="sh.siava.AOSPMods.SettingsActivity$ThreeButtonNavFragment"
        app:key="threebutton_header"
        app:title="@string/threebutton_header_title" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="HideNavbarOverlay"
        android:summaryOff="@string/general_off"
        android:summaryOn="@string/general_on"
        android:title="@string/hide_navbar_title" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/taskbar_option_names"
        android:entryValues="@array/taskbar_option_value"
        android:summary="%s"
        android:key="taskBarMode"
        android:title="@string/taskbar_status_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="TaskbarAsRecents"
        android:summaryOff="@string/general_off"
        android:summaryOn="@string/general_on"
        android:title="@string/taskbar_as_recents_title" />

</PreferenceScreen>